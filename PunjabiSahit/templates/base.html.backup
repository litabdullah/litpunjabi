
{% load static wagtailuserbar i18n %}

<!DOCTYPE html>
<html lang="{% get_current_language as LANGUAGE_CODE %}{{ LANGUAGE_CODE }}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Punjabi Sahit{% endblock title %}{% block title_suffix %}{% endblock title_suffix %}</title>

    {# Global stylesheets #}
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Noto Sans', sans-serif; }
        .gurmukhi { font-size: 1.25rem; }
        .transition-transform { transition: transform 0.3s ease-in-out; }
        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
    </style>

    {% block extra_css %}{# Add any page-specific CSS here #}{% endblock extra_css %}
</head>

<body class="bg-gray-50 text-gray-800 {% block body_class %}{% endblock body_class %}">
    {% wagtailuserbar %}

    <!-- Header Section (Same on every page) -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-3 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-orange-600">ਪੰਜਾਬੀ ਸਾਹਿਤ</a>
            <div class="hidden md:flex space-x-6 items-center">
                <a href="/dictionary/" class="text-gray-600 hover:text-orange-500">{% trans "Dictionary" %}</a>
                <a href="/phrases/" class="text-gray-600 hover:text-orange-500">{% trans "Phrases" %}</a>
                <a href="/idioms/" class="text-gray-600 hover:text-orange-500">{% trans "Idioms" %}</a>
                <a href="/blog/" class="text-gray-600 hover:text-orange-500">{% trans "Blog" %}</a>
                <a href="/home-page/books/" class="text-gray-600 hover:text-orange-500">{% trans "Books" %}</a>
                <a href="/home-page/authors/" class="text-gray-600 hover:text-orange-500">{% trans "Authors" %}</a>
                <a href="/events/" class="text-gray-600 hover:text-orange-500">{% trans "Events" %}</a>
            </div>
            <div class="hidden md:flex items-center border rounded-full px-3 py-1">
                <input type="search" placeholder="{% trans 'Search anything...' %}" class="outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            </div>

            <!-- Language Switcher -->
            <div class="hidden md:block relative language-switcher">
                <form action="{% url 'set_language' %}" method="post" id="language-form">
                    {% csrf_token %}
                    <input name="next" type="hidden" value="{{ request.path }}">
                    <select name="language" onchange="this.form.submit()" class="bg-white border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 cursor-pointer">
                        {% get_current_language as CURRENT_LANGUAGE %}
                        {% get_available_languages as AVAILABLE_LANGUAGES %}
                        {% for lang_code, lang_name in AVAILABLE_LANGUAGES %}
                        <option value="{{ lang_code }}" {% if lang_code == CURRENT_LANGUAGE %}selected{% endif %}>
                            {% if lang_code == 'en' %}English
                            {% elif lang_code == 'hi' %}हिन्दी
                            {% elif lang_code == 'pa' %}ਪੰਜਾਬੀ
                            {% else %}{{ lang_name }}
                            {% endif %}
                        </option>
                        {% endfor %}
                    </select>
                </form>
            </div>

            <button id="mobile-menu-button" class="md:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>
            </button>
        </nav>
        <div id="mobile-menu" class="hidden md:hidden px-6 pt-2 pb-4 space-y-2">
            <a href="/dictionary/" class="block text-gray-600 hover:text-orange-500">{% trans "Dictionary" %}</a>
            <a href="/phrases/" class="block text-gray-600 hover:text-orange-500">{% trans "Phrases" %}</a>
            <a href="/idioms/" class="block text-gray-600 hover:text-orange-500">{% trans "Idioms" %}</a>
            <a href="/blog/" class="block text-gray-600 hover:text-orange-500">{% trans "Blog" %}</a>
            <a href="/home-page/books/" class="block text-gray-600 hover:text-orange-500">{% trans "Books" %}</a>
            <a href="/home-page/authors/" class="block text-gray-600 hover:text-orange-500">{% trans "Authors" %}</a>
            <a href="/events/" class="block text-gray-600 hover:text-orange-500">{% trans "Events" %}</a>
            <div class="flex items-center border rounded-full px-3 py-1 mt-4">
                <input type="search" placeholder="{% trans 'Search...' %}" class="w-full outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
            </div>

            <!-- Mobile Language Switcher -->
            <div class="mt-4 pt-4 border-t border-gray-200">
                <form action="{% url 'set_language' %}" method="post">
                    {% csrf_token %}
                    <input name="next" type="hidden" value="{{ request.path }}">
                    <select name="language" onchange="this.form.submit()" class="w-full bg-white border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-orange-500 cursor-pointer">
                        {% get_current_language as CURRENT_LANGUAGE %}
                        {% get_available_languages as AVAILABLE_LANGUAGES %}
                        {% for lang_code, lang_name in AVAILABLE_LANGUAGES %}
                        <option value="{{ lang_code }}" {% if lang_code == CURRENT_LANGUAGE %}selected{% endif %}>
                            {% if lang_code == 'en' %}English
                            {% elif lang_code == 'hi' %}हिन्दी
                            {% elif lang_code == 'pa' %}ਪੰਜਾਬੀ
                            {% else %}{{ lang_name }}
                            {% endif %}
                        </option>
                        {% endfor %}
                    </select>
                </form>
            </div>
        </div>
    </header>

    {% block content %}{% endblock content %}

    <!-- Footer (Same on every page) -->
    <footer class="bg-gray-800 text-white mt-20">
        <div class="container mx-auto px-6 py-10">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <!-- Footer content can be filled in here -->
            </div>
            <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
                &copy; 2025 Punjabi Sahit. All Rights Reserved.
            </div>
        </div>
    </footer>

    {# Global javascript #}
    <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenuButton) {
            mobileMenuButton.addEventListener('click', () => {
                if (mobileMenu) {
                    mobileMenu.classList.toggle('hidden');
                }
            });
        }
    </script>
    {% block extra_js %}{# Add any page-specific JS here #}{% endblock extra_js %}
</body>
</html>
